# üîê Environment Variables Configuration
# Copy this file to .env and update the values

# ====================================
# üì± EXPO CONFIGURATION
# ====================================

# Your Expo project ID (get from expo.dev)
EXPO_PROJECT_ID=your_expo_project_id_here

# Expo public token for builds
EXPO_PUBLIC_EXPO_TOKEN=your_expo_token

# ====================================
# üçé NUTRITION API KEYS  
# ====================================

# USDA FoodData Central API Key
# Get from: https://fdc.nal.usda.gov/api-guide.html
USDA_API_KEY=your_usda_api_key

# Nutritionix API Credentials
# Get from: https://www.nutritionix.com/business/api
NUTRITIONIX_APP_ID=your_nutritionix_app_id
NUTRITIONIX_API_KEY=your_nutritionix_api_key

# Spoonacular API Key (for recipes)
# Get from: https://spoonacular.com/food-api
SPOONACULAR_API_KEY=your_spoonacular_api_key

# ====================================
# üìä ANALYTICS & MONITORING
# ====================================

# Sentry DSN for error tracking
# Get from: https://sentry.io/
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics Measurement ID
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Mixpanel Token
MIXPANEL_TOKEN=your_mixpanel_token

# ====================================
# ‚òÅÔ∏è CLOUD SERVICES
# ====================================

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-firebase-project
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=123456789012
FIREBASE_APP_ID=1:123456789012:web:abcdef123456

# AWS S3 Configuration (for photo storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_S3_BUCKET=nutrition-tracker-photos
AWS_REGION=us-east-1

# ====================================
# üîî PUSH NOTIFICATIONS
# ====================================

# Expo Push Notifications
EXPO_PUSH_TOKEN=your_expo_push_token

# OneSignal App ID
ONESIGNAL_APP_ID=your_onesignal_app_id

# ====================================
# üõí PAYMENT & MONETIZATION
# ====================================

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret

# RevenueCat API Key
REVENUECAT_API_KEY=your_revenuecat_key

# ====================================
# ü§ñ AI & MACHINE LEARNING
# ====================================

# OpenAI API Key (for food recognition)
OPENAI_API_KEY=your_openai_api_key

# Google Cloud Vision API Key
GOOGLE_CLOUD_VISION_KEY=your_google_vision_key

# Clarifai API Key (for food image analysis)
CLARIFAI_API_KEY=your_clarifai_key

# ====================================
# üìß EMAIL & COMMUNICATIONS
# ====================================

# SendGrid API Key
SENDGRID_API_KEY=your_sendgrid_api_key

# Mailchimp API Key & List ID
MAILCHIMP_API_KEY=your_mailchimp_key
MAILCHIMP_LIST_ID=your_list_id

# ====================================
# üß™ DEVELOPMENT & TESTING
# ====================================

# Environment mode
NODE_ENV=development

# API Base URL
API_BASE_URL=https://api.nutritiontracker.dev

# Debug flags
DEBUG_API_REQUESTS=false
DEBUG_NAVIGATION=false
DEBUG_STORAGE=false

# Test database URL (for integration tests)
TEST_DATABASE_URL=your_test_db_url

# ====================================
# üîí SECURITY
# ====================================

# JWT Secret for token signing
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Encryption key for sensitive data
ENCRYPTION_KEY=your_32_character_encryption_key

# Rate limiting configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ====================================
# üì± MOBILE SPECIFIC
# ====================================

# App Store Connect API Key (for iOS builds)
APP_STORE_CONNECT_KEY_ID=your_key_id
APP_STORE_CONNECT_ISSUER_ID=your_issuer_id

# Google Play Console API (for Android builds)
GOOGLE_PLAY_SERVICE_ACCOUNT_KEY=path_to_service_account.json

# ====================================
# üè• HEALTH INTEGRATIONS
# ====================================

# Apple HealthKit (iOS)
HEALTHKIT_ENABLED=true

# Google Fit API
GOOGLE_FIT_CLIENT_ID=your_google_fit_client_id

# Fitbit API
FITBIT_CLIENT_ID=your_fitbit_client_id
FITBIT_CLIENT_SECRET=your_fitbit_secret

# ====================================
# üìç LOCATION & MAPS
# ====================================

# Google Maps API Key
GOOGLE_MAPS_API_KEY=your_google_maps_key

# Mapbox Access Token
MAPBOX_ACCESS_TOKEN=your_mapbox_token

# ====================================
# üéØ FEATURE FLAGS
# ====================================

# Feature toggles
FEATURE_BARCODE_SCANNER=true
FEATURE_MEAL_PLANNING=true  
FEATURE_SOCIAL_SHARING=false
FEATURE_PREMIUM_FEATURES=true
FEATURE_DARK_MODE=true
FEATURE_OFFLINE_MODE=true

# ====================================
# üìä PERFORMANCE MONITORING
# ====================================

# Flipper debugging (development only)
FLIPPER_ENABLED=true

# Performance monitoring
PERFORMANCE_MONITORING=true

# Crash reporting
CRASH_REPORTING=true

# ====================================
# üåê INTERNATIONALIZATION
# ====================================

# Default locale
DEFAULT_LOCALE=en-US

# Supported locales
SUPPORTED_LOCALES=en-US,es-ES,fr-FR,de-DE,ja-JP

# Translation service API
TRANSLATION_API_KEY=your_translation_key

# ====================================
# üíæ DATABASE & STORAGE
# ====================================

# SQLite database file location
SQLITE_DB_PATH=./nutrition_tracker.db

# Redis configuration (for caching)
REDIS_URL=redis://localhost:6379

# PostgreSQL connection (if using remote DB)
POSTGRES_URL=postgresql://user:password@localhost:5432/nutrition_tracker

# ====================================
# üöÄ DEPLOYMENT
# ====================================

# App version for build
APP_VERSION=1.0.0

# Build number
BUILD_NUMBER=1

# Release channel
RELEASE_CHANNEL=default

# OTA Updates enabled
OTA_UPDATES_ENABLED=true 